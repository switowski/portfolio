{# add link to home page and navigation section #}
<nav class="w-full" x-data>
  <div class="nav" @keyup.escape.window="$store.nav.close()">
    {# Logo #}
    <div class="pl-4">
      <a class="text-xl" href="/">switowski</a>
    </div>

    {# Mobile navigation toggle button #}
    <div class="pr-7 lg:hidden" @click="$store.nav.toggle()">
      <div :class="$store.nav.isOpen && 'active'" class="hamburger">
        <span class="hamburger__line"></span>
        <span class="hamburger__line"></span>
        <span class="hamburger__line"></span>
      </div>
    </div>

    {# Navigation links #}
    <div :class="!$store.nav.isOpen && 'hidden'" class="nav__list">
      {{ collections.all | eleventyNavigation | eleventyNavigationToHtml | safe }}
      {# Dark/light theme switch #}
      <button class="nav__theme-switch" @click="switchDarkMode()" aria-label="Switch color scheme">
        <span class="dark-theme-switch">{% feather "sun"%}</span>
        <span class="light-theme-switch">{% feather "moon"%}</span>
      </button>
    </div>
  </div>
  {# Mobile nav overlay #}
  <div @click="$store.nav.close()" :class="!$store.nav.isOpen && 'hidden'" class="bg-opacity-40 fixed inset-0 z-10 w-screen h-screen bg-black"></div>
</nav>
